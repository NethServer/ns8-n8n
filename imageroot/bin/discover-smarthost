import sys
import agent
import os
import socket

# Connect the local Redis replica. This is necessary to consistently start
# the service if the leader node is not reachable:
rdb = agent.redis_connect(use_replica=True)
smtp_settings = agent.get_smarthost_settings(rdb)

# Get FQDN
fqdn = socket.getfqdn()

envfile = "smarthost.env"

# Using .tmp suffix: do not overwrite the target file until the new one is
# saved to disk:
with open(envfile + ".tmp", "w") as efp:
    if smtp_settings.get('host'):
        # Configure SMTP settings for N8N email notifications
        print(f"N8N_EMAIL_MODE={'smtp' if smtp_settings['enabled'] else ''}", file=efp)
        print(f"N8N_SMTP_HOST={smtp_settings['host']}", file=efp)
        print(f"N8N_SMTP_PORT={smtp_settings['port']}", file=efp)
        print(f"N8N_SMTP_USER={smtp_settings['username']}", file=efp)
        print(f"N8N_SMTP_PASS={smtp_settings['password']}", file=efp)
        print(f"N8N_SMTP_SSL={'true' if smtp_settings['encrypt_smtp']=='tls' else 'false'}", file=efp)
        print(f"N8N_SMTP_STARTTLS={'true' if smtp_settings['encrypt_smtp']=='starttls' else 'false'}", file=efp)
        if smtp_settings.get('username'):
            print(f"N8N_SMTP_SENDER=noreply@{smtp_settings.get('host', 'localhost')}", file=efp)
        else:
            print(f"N8N_SMTP_SENDER=noreply@{fqdn}", file=efp)
    else:
        # No SMTP configuration found: disable email notifications
        print(f"N8N_EMAIL_MODE=", file=efp)
        print(f"N8N_SMTP_HOST=localhost", file=efp)
        print(f"N8N_SMTP_PORT=25", file=efp)
        print(f"N8N_SMTP_USER=", file=efp)
        print(f"N8N_SMTP_PASS=", file=efp)
        print(f"N8N_SMTP_SSL=false", file=efp)
        print(f"N8N_SMTP_STARTTLS=false", file=efp)
        print(f"N8N_SMTP_SENDER=noreply@localhost", file=efp)

# Commit changes by replacing the existing envfile:
os.replace(envfile + ".tmp", envfile)